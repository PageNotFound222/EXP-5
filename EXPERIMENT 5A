// EXP 5A DETERMINATION OF ODD AND EVEN NUMBERS

#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter the given number: ";
    cin >> num;

    if (num % 2 == 0) {
        cout << "The given number is an even number" << endl;
    } else {
        cout << "The given number is an odd number" << endl;
    }

    return 0;
}





// EXP 5F A SMALL ATM MACHINE USING SWITCH STATEMENTS

#include <iostream>
using namespace std;

int main() {
    int choice;
    double balance = 5000, amount;

    cout << "1. CHECK BALANCE" << endl;
    cout << "2. DEPOSIT MONEY" << endl;
    cout << "3. WITHDRAW MONEY" << endl;
    cout << "Select any of the 3 choices: " << endl;
    cin >> choice;

    switch(choice) {
        case 1:
            cout << "Your current balance is: " << balance << endl;
            break;

        case 2:
            cout << "Enter the amount to deposit: ";
            cin >> amount;
            if (amount > 0) {
                balance += amount;
                cout << "New balance: " << balance << endl;
            } else {
                cout << "Invalid amount entered." << endl;
            }
            break;

        case 3:
            cout << "Enter the amount to withdraw: ";
            cin >> amount;
            if (amount > 0 && amount <= balance) {
                balance -= amount;
                cout << "Withdrawal successful. New balance: " << balance << endl;
            } else {
                cout << "Insufficient balance or invalid amount." << endl;
            }
            break;

        default:
            cout << "Invalid choice. Please enter a number between 1 and 3." << endl;
    }

    return 0;
}
